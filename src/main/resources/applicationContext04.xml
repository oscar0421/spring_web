<?xml version="1.0" encoding="UTF-8"?>
<!-- p.71, 82 -->
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="sonySpeaker" class="kr.mjc.oscar.spring.day1.class04.SonySpeaker"/>

  <bean id="appleSpeaker"
        class="kr.mjc.oscar.spring.day1.class04.AppleSpeaker"/>

  <!-- constructor-based dependency injeciton -->
  <bean id="samsungTV" class="kr.mjc.oscar.spring.day1.class04.SamsungTV">
    <constructor-arg ref="sonySpeaker"/>
  </bean>

  <!-- setter-based dependency injection -->
  <bean id="lgTV" class="kr.mjc.oscar.spring.day1.class04.LgTV">
    <property name="speaker" ref="appleSpeaker"/>
  </bean>
</beans>